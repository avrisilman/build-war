	<bean id="dataSource" class="com.zaxxer.hikari.HikariDataSource" destroy-method="close">
		<property name="connectionTimeout" value="${hikari.pool.connectionTimeout}" />
		<property name="dataSourceClassName" value="${hikari.pool.class}" />
<!-- 		<property name="minimumIdle" value="${hikari.pool.minimum.idle}" /> -->
		<property name="maximumPoolSize" value="${hikari.pool.maximum}" />
		<property name="maxLifetime" value="${hikari.pool.maxLifetime}" />
		<property name="idleTimeout" value="${hikari.pool.idleTimeout}" />
		
		<property name="connectionTestQuery" value="SELECT 1"></property>
		<property name="leakDetectionThreshold" value="${hikari.pool.leakDetectionThreshold}" />
		<property name="dataSourceProperties">
			<props>
				<prop key="serverName">${jdbc.url}</prop>
				<prop key="databaseName">${jdbc.dbname}</prop>
				<prop key="user">${jdbc.username}</prop>
				<prop key="password">${jdbc.password}</prop>
			</props>
		</property>
	</bean>

